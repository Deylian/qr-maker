
<div class="h-screen flex items-center justify-center">
        <div>
            <label for="website" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Website URL</label>
            <input type="url" id="website" class="rounded-lg" placeholder="Enter your link" required />
        </div>
        
        <button type="button" class="text-white bg-green-700 hover:bg-green-800 font-medium rounded-lg text-sm px-5 py-2.5 me-2 -mb-7 ">Create QR</button>



<% require "rqrcode"

qrcode = RQRCode::QRCode.new("http://youtube.com/")

png = qrcode.as_png(
  bit_depth: 1,
  border_modules: 4,
  color_mode: ChunkyPNG::COLOR_GRAYSCALE,
  color: "black",
  file: nil,
  fill: "white",
  module_px_size: 6,
  resize_exactly_to: false,
  resize_gte_to: false,
  size: 120
)

IO.binwrite("./app/assets/images/youtube-qrcode.png", png.to_s)
%>

 <%= image_tag("youtube-qrcode.png") %>

</div>